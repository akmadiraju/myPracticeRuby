<!DOCTYPE html>
<html>
<head>
<title>Title of the document</title>
</head>
	<h1 align = "center">Registration Form</h1>
<body>
	<%= form_tag("login", method: "post") do %>
		<%= label_tag(:firstname, "FirstName :")%>
			<%= text_field(:firstname, :firstname)%> <br/>
		<%= label_tag(:firstname, "LastName :")%>
			<%= text_field(:lastname, :lastname)%><br/>
		<%= label_tag(:username, "UserName :")%>
			<%= text_field(:username, :username)%><br/>
		<%= label_tag(:password, "Password :")%>
			<%= password_field_tag(:password)%><br/>
		<%= label_tag(:sex, "Male :") %>
			<%= radio_button_tag(:sex, "male")%><br/>
		<%= label_tag(:sex, "Female:") %>
			<%= radio_button_tag(:sex, "female")%><br/>
		<%= submit_tag("Submit") %>
		
	<%end%>
</body>

</html>